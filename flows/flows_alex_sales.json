    "qualify_intro": {
      "say": "Great—I’ll ask short questions one at a time so I can tailor the recommendation for you.",
      "tone": "curious",
      "pauseMs": 300,
      "next": "q_joint_any"
    },

    "q_joint_any": {
      "say": "Do you have arthritis or joint pain and stiffness?",
      "tone": "curious",
      "capture": "joint_pain_any",
      "pauseMs": 700,
      "next": "ack_joint_any"
    },
    "ack_joint_any": {
      "say": "Got it, thank you.",
      "tone": "empathetic",
      "pauseMs": 200,
      "next": "q_joint_pain_scale"
    },
    "q_joint_pain_scale": {
      "say": "On a scale of one to ten, what’s your joint pain today?",
      "tone": "curious",
      "capture": "joint_pain_scale",
      "pauseMs": 700,
      "next": "ack_joint_scale"
    },
    "ack_joint_scale": {
      "say": "Thank you, that helps.",
      "tone": "empathetic",
      "pauseMs": 200,
      "next": "q_age_exact"
    },

    "q_age_exact": {
      "say": "If you don’t mind me asking, how old are you?",
      "tone": "curious",
      "capture": "age_years",
      "pauseMs": 700,
      "next": "ack_age"
    },
    "ack_age": {
      "say": "Appreciate it—you sound great.",
      "tone": "empathetic",
      "pauseMs": 250,
      "next": "q_diabetes_have"
    },

    "q_diabetes_have": {
      "say": "Do you deal with diabetes of any kind—yes or no?",
      "tone": "curious",
      "capture": "diabetes_have",
      "pauseMs": 700,
      "branches": { "yes": "q_diabetes_type", "no": "q_energy_level", "hesitate": "q_energy_level" }
    },
    "q_diabetes_type": {
      "say": "Is it type one or type two?",
      "tone": "curious",
      "capture": "diabetes_type",
      "pauseMs": 600,
      "next": "ack_diabetes_type"
    },
    "ack_diabetes_type": {
      "say": "Thanks. Is it managed well right now?",
      "tone": "curious",
      "capture": "diabetes_managed",
      "pauseMs": 700,
      "next": "q_diabetes_meds"
    },
    "q_diabetes_meds": {
      "say": "What do you currently take for it, if anything?",
      "tone": "curious",
      "capture": "diabetes_meds",
      "pauseMs": 800,
      "next": "ack_diabetes"
    },
    "ack_diabetes": {
      "say": "Thank you, that gives me a clearer picture.",
      "tone": "empathetic",
      "pauseMs": 250,
      "next": "q_energy_level"
    },

    "q_energy_level": {
      "say": "How are your energy levels day to day—low, medium, or high?",
      "tone": "curious",
      "capture": "energy_level",
      "pauseMs": 700,
